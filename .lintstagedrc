{
  "$schema": "http://json.schemastore.org/lintstagedrc.schema",
  "*.{js,jsx,ts,tsx}": [
    "eslint --fix",
    "git add"
  ],
  "*.{less,css}": [
    "prettier --write",
    "git add"
  ],
  ".*rc": [
    "prettier --write",
    "git add"
  ],
  "*.{html,json,md,mdx,yaml,yml}": [
    "prettier --write",
    "git add"
  ]
}
